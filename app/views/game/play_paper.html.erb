<body>
  <div class="container">
    <hr>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-xs-12">
        <div class="btn-group btn-group-justified">
          <a href="http://localhost:3000/rock" class="btn btn-block btn-primary">
            Play Rock
          </a>
          <a href="http://localhost:3000/paper" class="btn btn-block btn-info">
            Play Paper
          </a>
          <a href="http://localhost:3000/scissors" class="btn btn-block btn-primary">
            Play Scissors
          </a>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-4 col-md-offset-2 col-xs-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class ="panel-title text-center">
              Paper
            </h2>
          </div>
          <div class="panel-body">
            <img class="img-responsive center-block" src="http://localhost:3000/assets/images/paper.png" width="200">
          </div>
        </div>
      </div>
      <div class="col-md-4 col-xs-6">
        <div class="panel panel-danger">
          <div class="panel-heading">

            <% if @computer_move == "rock" %>
            <h2 class ="panel-title text-center">Rock</h2>
          </div>
          <div class="panel-body">
            <img src="http://localhost:3000/assets/images/rock.png" width="200" class="img-responsive center-block">
          </div>
          <% end %>

          <% if @computer_move == "paper" %>
          <h2 class ="panel-title text-center">Paper</h2>
        </div>
        <div class="panel-body">
          <img src="http://localhost:3000/assets/images/paper.png" width="200" class="img-responsive center-block">
        </div>
        <% end %>

        <% if @computer_move == "scissors" %>
        <h2 class ="panel-title text-center">Scissors</h2>
      </div>
      <div class="panel-body">
        <img src="http://localhost:3000/assets/images/scissors.png" width="200" class="img-responsive center-block">
      </div>
      <% end %>

    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="well text-center">
      <h1>
        <% if @computer_move == "rock" %>
        <span class="label label-success">
          You won.
        </span>
        <% end %>

        <% if @computer_move == "paper" %>
        <span class="label label-warning">
          You tied.
        </span>
        <% end %>

        <% if @computer_move == "scissors" %>
        <span class="label label-danger">
          You lost.
        </span>
        <% end %>
      </h1>
    </div>
  </div>
</div>
</body>
